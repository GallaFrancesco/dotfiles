[Account dipartimento]
localrepository = dipartimento-local
remoterepository = dipartimento-remote

[Repository dipartimento-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = galla
remotepasseval = mailpasswd("dipartimento")
remotehost = mail.di.unito.it
remoteport = 143
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl = no
folderfilter = lambda fname: not "mailboxlist" in fname and fname in [ "Drafts", "INBOX", "mail.Drafts", "mail.Junk", "mail.Sent", "mail.Trash", "Sent", "Trash"]

[Repository dipartimento-local]
type = Maildir
localfolders = ~/.mail/dipartimento
