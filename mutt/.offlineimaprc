localrepository = unito-local
remoterepository = unito-remote

[Repository unito-remote]
auth_mechanisms = LOGIN
type = Gmail
remoteuser = francesco.galla@edu.unito.it
remotepasseval = mailpasswd("unito")
remotehost = imap.gmail.com
