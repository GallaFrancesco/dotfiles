[general]
accounts = fragal,unito,dipartimento
starttls = yes
ssl = yes
pythonfile = ~/.mutt/pass.py

[Account fragal]
localrepository = fragal-local
remoterepository = fragal-remote

[Repository fragal-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = lagfra
remotepasseval = mailpasswd("fragal")
remotehost = disroot.org
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda fname: not "ME" in fname

[Repository fragal-local]
type = Maildir
localfolders = ~/.mail/fragal


